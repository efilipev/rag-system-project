{
  "dashboard": {
    "title": "Query Analysis Service - Metrics Dashboard",
    "description": "Comprehensive monitoring dashboard for Query Analysis microservice",
    "tags": ["query-analysis", "rag", "nlp", "ml"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Query Volume - Total Queries",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(query_analysis_requests_total[5m])) * 300",
            "refId": "A",
            "legendFormat": "Total Queries/5min"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Average Processing Time",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "avg(query_analysis_processing_time_seconds)",
            "refId": "A",
            "legendFormat": "Avg Processing Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate(query_analysis_cache_hits_total[5m]) / (rate(query_analysis_cache_hits_total[5m]) + rate(query_analysis_cache_misses_total[5m]))",
            "refId": "A",
            "legendFormat": "Hit Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.7, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Users (Last Hour)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "count(count by (user_id) (query_analysis_requests_total{user_id!=\"anonymous\"}))",
            "refId": "A",
            "legendFormat": "Active Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 5,
        "title": "Query Volume Over Time",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(query_analysis_requests_total[5m]) * 60",
            "refId": "A",
            "legendFormat": "Queries/minute"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "qpm",
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "lineWidth": 2,
              "pointSize": 5,
              "showPoints": "never"
            }
          }
        },
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 6,
        "title": "Processing Time Percentiles",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(query_analysis_processing_time_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.90, rate(query_analysis_processing_time_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p90"
          },
          {
            "expr": "histogram_quantile(0.95, rate(query_analysis_processing_time_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(query_analysis_processing_time_bucket[5m]))",
            "refId": "D",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 7,
        "title": "Intent Distribution",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "sum by (intent) (query_analysis_intent_classification_total)",
            "refId": "A",
            "legendFormat": "{{intent}}"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
          "pieType": "pie",
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 8,
        "title": "Cache Performance",
        "type": "timeseries",
        "gridPos": {"x": 8, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(query_analysis_cache_hits_total[5m])",
            "refId": "A",
            "legendFormat": "Cache Hits"
          },
          {
            "expr": "rate(query_analysis_cache_misses_total[5m])",
            "refId": "B",
            "legendFormat": "Cache Misses"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 9,
        "title": "Top 10 Popular Queries",
        "type": "table",
        "gridPos": {"x": 16, "y": 12, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (query) (query_analysis_query_frequency_total))",
            "refId": "A",
            "instant": true,
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Value", "desc": true}]
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "query"},
              "properties": [{"id": "custom.width", "value": 400}]
            }
          ]
        }
      },
      {
        "id": 10,
        "title": "Entity Types Distribution",
        "type": "bargauge",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "topk(10, sum by (entity_type) (query_analysis_entity_extraction_total))",
            "refId": "A",
            "legendFormat": "{{entity_type}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 11,
        "title": "Query Expansion Performance",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(query_analysis_expansion_requests_total[5m])",
            "refId": "A",
            "legendFormat": "Expansion Requests"
          },
          {
            "expr": "avg(query_analysis_expansions_generated)",
            "refId": "B",
            "legendFormat": "Avg Expansions Generated"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 12,
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 26, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(query_analysis_errors_total[5m])",
            "refId": "A",
            "legendFormat": "Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"},
            "custom": {
              "fillOpacity": 70
            }
          }
        },
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"params": [10], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "Query Analysis service error rate is above threshold",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 13,
        "title": "Service Health Status",
        "type": "stat",
        "gridPos": {"x": 12, "y": 26, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "up{job=\"query-analysis\"}",
            "refId": "A",
            "legendFormat": "Service Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "Language Distribution",
        "type": "piechart",
        "gridPos": {"x": 18, "y": 26, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum by (language) (query_analysis_language_detection_total)",
            "refId": "A",
            "legendFormat": "{{language}}"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom"},
          "pieType": "donut"
        }
      },
      {
        "id": 15,
        "title": "Top Keywords (Last 24h)",
        "type": "table",
        "gridPos": {"x": 0, "y": 32, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(20, sum by (keyword) (increase(query_analysis_keyword_frequency_total[24h])))",
            "refId": "A",
            "instant": true,
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Value", "desc": true}]
        }
      },
      {
        "id": 16,
        "title": "RabbitMQ Consumer Lag",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 32, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "query_analysis_consumer_lag{queue=\"query-history\"}",
            "refId": "A",
            "legendFormat": "History Queue Lag"
          },
          {
            "expr": "query_analysis_consumer_lag{queue=\"query-analytics\"}",
            "refId": "B",
            "legendFormat": "Analytics Queue Lag"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 17,
        "title": "Cache Latency Comparison",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 40, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "avg(query_analysis_processing_time_seconds{cache_hit=\"true\"})",
            "refId": "A",
            "legendFormat": "With Cache Hit"
          },
          {
            "expr": "avg(query_analysis_processing_time_seconds{cache_hit=\"false\"})",
            "refId": "B",
            "legendFormat": "Without Cache"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 18,
        "title": "Query Complexity Score",
        "type": "histogram",
        "gridPos": {"x": 12, "y": 40, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "query_analysis_query_complexity_score",
            "refId": "A",
            "legendFormat": "Complexity Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "value": "Prometheus",
            "text": "Prometheus"
          }
        },
        {
          "name": "time_range",
          "type": "interval",
          "query": "5m,15m,30m,1h,6h,12h,1d",
          "current": {
            "value": "5m",
            "text": "5m"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(query_analysis_build_info[5m]) > 0",
          "iconColor": "blue",
          "tagKeys": "version"
        }
      ]
    }
  },
  "overwrite": true
}
