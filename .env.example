# Database Configuration
POSTGRES_USER=raguser
POSTGRES_PASSWORD=ragpassword
POSTGRES_DB=ragdb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=raguser
RABBITMQ_DEFAULT_PASS=ragpassword
RABBITMQ_URL=amqp://raguser:ragpassword@rabbitmq:5672/

# Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Chroma Configuration
CHROMA_URL=http://chroma:8000
CHROMA_HOST=chroma
CHROMA_PORT=8000

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET_NAME=rag-documents

# OpenAI API Key (for LLM Generation)
OPENAI_API_KEY=your-openai-api-key-here

# Service Ports
QUERY_ANALYSIS_PORT=8101
DOCUMENT_RETRIEVAL_PORT=8102
DOCUMENT_RANKING_PORT=8103
LATEX_PARSER_PORT=8104
LLM_GENERATION_PORT=8105
RESPONSE_FORMATTER_PORT=8106

# Logging
LOG_LEVEL=INFO

# Model Configuration - Optimized based on benchmark results (Nov 2025)
# BGE-base-en-v1.5 achieved NDCG@10=0.991 with good speed (216ms/doc)
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
RANKING_MODEL=cross-encoder/ms-marco-MiniLM-L-12-v2
VECTOR_DIMENSION=768

# Hybrid Search Configuration - Benchmark showed 30/70 dense/sparse optimal
HYBRID_DENSE_WEIGHT=0.3
HYBRID_SPARSE_WEIGHT=0.7
HYBRID_FUSION_METHOD=weighted

# Chunking Configuration - Benchmark showed 1024 tokens optimal
CHUNK_SIZE=1024
CHUNK_OVERLAP=102

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_TTL=3600

# Alertmanager Notifications (Optional)
# Slack webhook for alert notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# PagerDuty integration keys
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key
PAGERDUTY_SECURITY_KEY=your-pagerduty-security-key

# Monitoring Configuration
PROMETHEUS_RETENTION_DAYS=15
LOKI_RETENTION_DAYS=31
